- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:screen_label)
      %th= model_class.human_attribute_name(:description)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @people.each do |person|
      %tr
        %td= link_to person.screen_label, person_path(person)
        %td= person.description
        %td
          = button_edit    person
          = button_destroy person
          
= link_to t('.new', :default => t("helpers.links.new")), new_person_path, :class => 'btn btn-primary'
