= form_for @person, html: { class: "form form-horizontal person" } do |f|
  .form-group
    = f.label :label, class: 'control-label'
    .controls
      = f.text_field :label, class: 'form-control', required: true
    = # error_span(@person[:label])
  .form-group
    = f.label :screen_label, class: 'control-label'
    .controls
      = f.text_field :screen_label, class: 'form-control', required: true
    = # error_span(@person[:screen_label])
  .form-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_field :description, class: 'form-control', required: true
    = # error_span(@person[:description])
  .form-group
    = f.label :link, class: 'control-label'
    .controls
      = f.url_field :link, class: 'form-control'
    = # error_span(@person[:link])

  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), people_path, :class => 'btn btn-default'
