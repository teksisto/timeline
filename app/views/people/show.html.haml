- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @person.name
%p
  %strong= model_class.human_attribute_name(:screen_name) + ':'
  %br
  = @person.screen_name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @person.description

%p
  %strong= model_class.human_attribute_name(:authored) + ':'
  %ul
    - for source in @person.authored
      %li= link_to source.name, source_path(source)

= link_to t('.back', :default => t("helpers.links.back")), people_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_person_path(@person), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), person_path(@person), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
