- model_class = Category
.page-header
  %h3
    - if @category.ancestors.present?
      = @category.ancestors.map{|a| link_to(a.name, category_path(a))+ ' Â» ' }.join.html_safe
    = @category.name

%p= @category.description

%p
  %strong= model_class.human_attribute_name(:color) + ':'
  %span{style: "background-color: #{@category.color}"}
    = @category.color

%p
  %strong= model_class.human_attribute_name(:icon) + ':'
  = category_icon(@category)    
= render partial: 'events/editor', locals: {events: @category.events}

= link_to t('.back', :default => t("helpers.links.back")), categories_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_category_path(@category), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), category_path(@category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-default'
