.form-group
  = f.label :author_ids, class: 'control-label'
  .controls
    = f.select :author_ids,
               options_from_collection_for_select(Person.all, :id, :label, f.object.author_ids),
               {include_blank: true},
               {multiple: true, style: 'width: 100%;'}
  = error_span(f.object[:author_ids])

