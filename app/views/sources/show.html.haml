- model_class = Source
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%h3= @source.name

%p
  = @source.description

%p
  %i.fa.fa-link
  = link_to @source.link, @source.link

%h4= "Events"

%table.table.table-striped
  %tbody
    - for event in @source.events
      %tr
        %td= event.year
        %td= event.month
        %td= event.day
        %td= link_to event.name, event_path(event)
        %td= event.description

  

= link_to t('.back', :default => t("helpers.links.back")), sources_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_source_path(@source), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), source_path(@source), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
