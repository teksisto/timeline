- model_class = Term

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:label)
      %th= model_class.human_attribute_name(:text)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - terms.each do |term|
      %tr
        %td= link_to term.id, term_path(term)
        %td= term.label
        %td= term.text
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_term_path(term), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), term_path(term), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-default'

= link_to t('.new', :default => t("helpers.links.new")), new_term_path, :class => 'btn btn-primary'
