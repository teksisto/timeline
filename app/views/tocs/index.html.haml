- model_class = Toc

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tocs.each do |toc|
      %tr
        %td= link_to toc.name, toc_path(toc)
        %td{style: 'width: 15%;'}
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_toc_path(toc), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), toc_path(toc), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-default'

= link_to t('.new', :default => t("helpers.links.new")), new_toc_path, :class => 'btn btn-primary'
