- model_class = Toc

%h3= ancestors_breadcrumbs(@toc)

- if @toc.outline
  = @toc.outline.content

- for toc in @toc.descendants
  = content_tag("h#{toc.depth}", toc.label)
  - if toc.outline
    %p= toc.outline.content

%hr

= link_to t('.edit', :default => t("helpers.links.edit")), edit_toc_path(@toc), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), toc_path(@toc), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-default'
