- model_class = Toc
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @toc.name
%p
  %strong= model_class.human_attribute_name(:parent_id) + ':'
  %br
  = @toc.parent_id
%p
  %strong= model_class.human_attribute_name(:lft) + ':'
  %br
  = @toc.lft
%p
  %strong= model_class.human_attribute_name(:rgt) + ':'
  %br
  = @toc.rgt
%p
  %strong= model_class.human_attribute_name(:depth) + ':'
  %br
  = @toc.depth
%p
  %strong= model_class.human_attribute_name(:outline_id) + ':'
  %br
  = @toc.outline_id


= link_to t('.back', :default => t("helpers.links.back")), tocs_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_toc_path(@toc), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), toc_path(@toc), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
