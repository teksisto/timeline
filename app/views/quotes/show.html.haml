- model_class = Quote
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:label) + ':'
  %br
  = @quote.label

- if @quote.source
  %p
    %strong= model_class.human_attribute_name(:source_id) + ':'
    %br
    = link_to @quote.source.label, @quote.source

- @quote.versions.each do |version|
  %blockquote
    = version.content

= link_to t('.back', :default => t("helpers.links.back")), quotes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_quote_path(@quote), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), quote_path(@quote), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
