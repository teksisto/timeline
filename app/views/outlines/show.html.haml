- model_class = Outline
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @outline.text


= link_to t('.back', :default => t("helpers.links.back")), outlines_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_outline_path(@outline), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), outline_path(@outline), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
