= form_tag events_path, method: 'get' do
  .filters.well
    
    %div{style: 'margin: -10px 0px 10px -10px;'}
      %i.fa.fa-cog= '&nbspFilters'.html_safe

    %table{style:'width: 100%;'}
      %tr
        %td{rowspan: 2, style:'width: 22%; height: 300px;'}
          = select_tag 'category_ids',
              category_options_for_select(Category.roots, params['category_ids']),
              include_blank:  true,
              multiple:       true,
              class:         'form-control',
              style:         'height: 100%; width: 100%; margin: 0px;',
              onclick:       'this.form.submit();'
        %td{style:'width: 73%;'}
          = select_tag 'source_ids',
              options_from_collection_for_select(Source.all, :id, :label_with_by_line, params[:source_ids]),
              include_blank:  true,
              multiple:       true,
              class:         'form-control',
              onclick:       'this.form.submit();',
              style:         'width: 100%;  height: 150px;'
      %tr
        %td{style:'width: 73%;'}
          = select_tag 'render_method',
              render_method_options(@partial),
              multiple:  true,
              class:    'form-control',
              style:    'width: 100%;  height: 149px;',
              onclick:  'this.form.submit();'
