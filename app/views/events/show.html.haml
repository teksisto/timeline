- model_class = Event

%h3= @event.label

%p
  %strong=  @event.start_date
  - if @event.period?
    &ndash;
    %strong=  @event.end_date

- if @event.location
  %p
    %strong= model_class.human_attribute_name(:location_id) + ':'
    = link_to @event.location.label, @event.location
    
%p= @event.description

- if @event.link
  %p
    %strong= model_class.human_attribute_name(:link) + ':'
    %i.fa.fa-link
      = link_to @event.link

%p
  %strong= model_class.human_attribute_name(:source) + ':'
  - if source = @event.source
    = link_to source.try(:label), source_path(source)

%p
  %strong= model_class.human_attribute_name(:age) + ': '
  = @event.age.to_s
    
%div
  %strong= 'Category:'
  %ul
    - for category in @event.categories
      %li= link_to category.label, category 

= button_edit    @event
= button_destroy @event


