= form_for @event, html: { class: "form form-horizontal event" } do |f|
  .form-group
    = f.label :label, class: 'control-label'
    .controls
      = f.text_field :label, class: 'form-control', required: true
    = error_span(@event[:label])
  .form-group
    = f.label :year, class: 'control-label'
    .controls
      = f.text_field :year, class: 'form-control', required: true
    = error_span(@event[:year])
  .form-group
    = f.label :month, class: 'control-label'
    .controls
      = f.text_field :month, class: 'form-control'
    = error_span(@event[:month])
  .form-group
    = f.label :day, class: 'control-label'
    .controls
      = f.text_field :day, class: 'form-control'
    = error_span(@event[:day])
  .form-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description, class: 'form-control'
    = error_span(@event[:description])

  .form-group
    = f.label :age, class: 'control-label'
    .controls
      = f.check_box :age, class: 'form-control'
    = error_span(@event[:age])

  .form-group
    = f.label :source_id, class: 'control-label'
    .controls
      = f.select :source_id, options_from_collection_for_select(Source.all, 'id', 'label', @event.source_id), {include_blank: true}, {class: 'form-control'}
    = error_span(@event[:source_id])

  .form-group
    = f.label :category_ids, class: 'control-label'
    .controls
      = f.select 'category_ids', category_options_for_select(Category.events_root, @event.category_ids), {include_blank: true}, {multiple: true}
    = error_span(@event[:source_id])
    :javascript
      $("#event_category_ids").select2();
    
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn btn-default'
