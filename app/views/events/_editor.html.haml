- model_class = Event

- unless events.empty?
  %table.table.table-striped
    %thead
      %tr
        %th= 'Date'
        %th= model_class.human_attribute_name(:label)
        %th= model_class.human_attribute_name(:description)
        %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - events.each do |event|
        %tr
          %td= event.start_date
          %td= link_to event.label, event_path(event)
          %td= event.description
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(event), :class => 'btn btn-default btn-xs'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-default'

= link_to t('Add event'), new_event_path, :class => 'btn  btn-default'
